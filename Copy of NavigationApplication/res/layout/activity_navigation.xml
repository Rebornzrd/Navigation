
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity" >
   

       <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bSearch"
        class="com.google.android.gms.maps.SupportMapFragment" />
              
        <ImageButton
            android:id="@+id/bNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/navigate_button" />
        
         <EditText
              android:id="@+id/et_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bSearch"
            android:layout_marginLeft="41dp"
            android:layout_toRightOf="@+id/bSearch"
            android:ems="10"
            android:hint="@string/hnt_et_location"
            android:inputType="text"   />

        <ImageButton
            android:id="@+id/bSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bNavigation"
            android:layout_alignParentLeft="true"
            android:src="@drawable/search_button" />
        
        
        <LinearLayout
            android:id="@+id/BottomButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="#FFFFFF"
            android:visibility="invisible">
            
            <TextView
            android:id="@+id/textView1"
            android:text="hello"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#ff183873"
            android:padding="10dp"
            android:gravity="center_horizontal"/>
            
            <TextView
            android:id="@+id/textView2"
            android:text="hello"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:padding="10dp"
            android:gravity="center_horizontal"/>
            
        </LinearLayout>
           
             
        <LinearLayout 
            android:id="@+id/myDetailedListView"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:visibility="invisible">
            
            <LinearLayout
            android:id="@+id/ListViewMainButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="#336699">
            
            <TextView
            android:id="@+id/textView3"
            android:text="hello"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center_horizontal"/>
            
            <TextView
            android:id="@+id/textView4"
            android:text="hello"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center_horizontal"/>
           </LinearLayout> 
            
            <ImageView
                android:id="@+id/ListViewImage"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />
            
	          <ListView 
	        android:id="@+id/listview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#FFFFFF">
	         
       		 </ListView>

         </LinearLayout>  
       
          <requestFocus />
</RelativeLayout>
